---
const { content, url, source } = Astro.props;

const transitionName = `media-image-${content.preview.id}-${source}`;
---


<div class="card bg-base-100 shadow-xl h-[500px]">
    <figure class="h-48 shrink-0"  transition:name={transitionName}>
        <img src={content.preview.filename}/>
    </figure>
    <div class="card-body">
        <h3 class="card-title">
            { content.title }
        <h3>
        <p class="line-clamp-3 overflow-hidden overflow-ellipsis">
            { content.description}
        </p>
        <div class="card-actions justify-start mt-4">
            <a href={url} class="link link-primary">read more</a>
        </div>
    </div>
</div>