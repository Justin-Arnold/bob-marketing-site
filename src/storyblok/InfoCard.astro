---
import { storyblokEditable } from '@storyblok/astro'
import { Icon } from 'astro-icon/components';

const { blok } = Astro.props

function getIconString(name: string) {
    return `icon-` + `[mdi--${name}]`
}
---
<section {...storyblokEditable(blok)} class="card bg-base-100 shadow-xl w-96">
    <div class="card-body text-neutral">
        <Icon name={blok.icon} class="text-5xl"/>
        <!-- {getIconString(blok.icon)} -->
        <h1 class="card-title">{blok.heading}</h1>
        <p class="text font-thin max-w-[500px]">{blok.subtext}</p>
    </div>
</section>