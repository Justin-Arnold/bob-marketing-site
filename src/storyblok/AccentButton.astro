---
import { storyblokEditable } from '@storyblok/astro'

const { blok } = Astro.props
---

<div {...storyblokEditable(blok)} class="w-40 rounded-full bg-primary/20 border-primary border text-primary">
    <a href={blok.link.cached_url ?? blok.link.url} class="flex items-center justify-center gap-2">
        <p class="text-thin">
            {blok.title}
        </p>
        <span class="icon-[mdi--chevron-right]"></span>
    </a>
</div>