---
import { storyblokEditable } from '@storyblok/astro'
import StoryblokComponent from '@storyblok/astro/StoryblokComponent.astro'

const { blok } = Astro.props
---

<section {...storyblokEditable(blok)} class="flex flex-col md:flex-row items-center gap-8 py-32 justify-center">
    <!-- Banner Header -->
    <div class="flex flex-col items-start gap-2 relative max-w-[500px]">
        <div class="absolute -top-8">
            {
                blok.preheading?.map((subBlok: any) => {
                    return <StoryblokComponent blok={subBlok} />
                })
            }
        </div>
        <h1 class="text-5xl mb-4 text-neutral text-left">{blok.heading}</h1>
    </div>
    <!-- Banner Subtext & CTA -->
    <div class="flex flex-col gap-4 text-left max-w-[400px]">
        <p class="text-lg font-thin text-neutral">{blok.subheading}</p>
        <span class="flex items-start gap-2 w-full">
            <a class="btn btn-secondary btn-outline max-w-fit">{blok.secondaryAction}</a>
            <a class="btn btn-primary max-w-fit">{blok.callToAction}</a>
        </span>
    </div>
</section>